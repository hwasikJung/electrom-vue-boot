{
  "name": "datanet-portal-frontend",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "fullstack:dev": "npm run backend:start && npm run frontend:start && npm run electron:start",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:4242 && electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.yourcompany.datanet-portal",
    "productName": "DataNet Portal",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "index.js",
      "preload.js",
      "!**/node_modules/**/{README.md,readme.md,CHANGELOG.md,changelog.md}"
    ],
    "extraResources": [
      {
        "from": "../backend/build/libs/",
        "to": "backend/",
        "filter": [
          "*.jar"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12",
    "concurrently": "^9.1.2",
    "wait-on": "^8.0.1",
    "vite": "^6.2.4"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "dotenv": "^16.5.0"
  }
}